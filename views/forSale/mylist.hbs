<h1>Listado de libros</h1>



{{#each data}}
    <div>
        <h1>{{comicName}} # {{volumeNumber}}</h1>
        <h1>${{price}}mxn</h1>
        <h3>{{writer}}</h3>
        <h3>{{penciler}}</h3>
        <h3>{{coverArtist}}</h3>
        <h4>{{published}}</h4>
        <h4>{{studio}}</h4>

        <a href="/sale/{{_id}}">see details</a>
        <a href="/sale/{{_id}}/edit">edit</a>

        <form action="/sale/{{_id}}/delete" method="POST">
            <button>Delete</button>
        </form>
    <hr />


    </div>
{{/each}}

